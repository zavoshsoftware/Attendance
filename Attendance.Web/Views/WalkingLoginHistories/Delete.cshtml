@model Attendance.Models.Entities.WalkingLoginHistory

@{
    ViewBag.Title = "حذف " + Server.HtmlDecode(Html.DisplayNameFor(model => model).ToString());
    Layout = "~/Views/Shared/BackEndLayout/_BackEndLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

<h3>آیا از حذف این مورد اطمینان دارید؟</h3>
<div>    
    <hr />
    <div class="form-horizontal">        
    
         <div class="form-group">
            @Html.LabelFor(model => model.Card.DisplayCode, new { @class = "control-label col-md-2" })
        <div class="col-md-10 font-medium">
            @Html.DisplayFor(model => model.Card.DisplayCode)
      </div></div>
         <div class="form-group">
            @Html.LabelFor(model => model.WalkingLoginHistoryType, new { @class = "control-label col-md-2" })
        <div class="col-md-10 font-medium">
            @Html.DisplayFor(model => model.WalkingLoginHistoryType)
      </div></div>

         <div class="form-group">
            @Html.LabelFor(model => model.IsDriver, new { @class = "control-label col-md-2" })
        <div class="col-md-10 font-medium">
            @Html.DisplayFor(model => model.IsDriver)
      </div></div>

         <div class="form-group">
            @Html.LabelFor(model => model.IsDriverHelper, new { @class = "control-label col-md-2" })
        <div class="col-md-10 font-medium">
            @Html.DisplayFor(model => model.IsDriverHelper)
      </div></div>

         <div class="form-group">
            @Html.LabelFor(model => model.IsActive, new { @class = "control-label col-md-2" })
        <div class="col-md-10 font-medium">
            @Html.DisplayFor(model => model.IsActive)
      </div></div>

         <div class="form-group">
            @Html.LabelFor(model => model.CreationDate, new { @class = "control-label col-md-2" })
        <div class="col-md-10 font-medium">
           @Model.CreationDate.ToShamsi('s')
      </div></div>
         
         <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
        <div class="col-md-10 font-medium">
            @Html.DisplayFor(model => model.Description)
      </div></div>

  </div>  

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

       <div class="form-group" id="buttons">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="تایید حذف" class="btn btn-primary font-medium" />
		 
            </div>
        </div>
    }
</div>
