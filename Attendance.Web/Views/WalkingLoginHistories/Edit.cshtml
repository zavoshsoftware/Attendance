EnumDropDownListFormodel Attendance.Models.Entities.WalkingLoginHistory

@{
	ViewBag.Title = "ویرایش " + Server.HtmlDecode(Html.DisplayNameFor(model => model).ToString());
	Layout = "~/Views/Shared/BackEndLayout/_BackEndLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "WalkingLoginHistories", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<hr />
		@Html.ValidationSummary(true)
		@Html.HiddenFor(model => model.Id)

		<div class="form-group">
			@Html.LabelFor(model => model.WalkingLoginHistoryType, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EnumDropDownListFor(model => model.WalkingLoginHistoryType)
				@Html.ValidationMessageFor(model => model.WalkingLoginHistoryType)
			</div>
		</div>


		<div class="form-group">
			@Html.LabelFor(model => model.IsDriver, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.IsDriver)
				@Html.ValidationMessageFor(model => model.IsDriver)
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.IsDriverHelper, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.IsDriverHelper)
				@Html.ValidationMessageFor(model => model.IsDriverHelper)
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.IsActive, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.IsActive)
				@Html.ValidationMessageFor(model => model.IsActive)
			</div>
		</div>

		@Html.HiddenFor(model => model.CreationDate)
		<div class="form-group">
			@Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Description)
				@Html.ValidationMessageFor(model => model.Description)
			</div>
		</div>

		<div class="form-group" id="buttons">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="ثبت" class="btn btn-primary" />
				@Html.ActionLink("بازگشت به فهرست", "Index", new { id = ViewBag.CardLoginHistoryId })
			</div>
		</div>
	</div>
}

