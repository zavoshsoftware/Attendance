@model Attendance.Models.Entities.Driver
@using Attendance.Core.Enums
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/BackEndLayout/_BackEndLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-primary ">
                <div class="panel-heading">
                    <h3 class="panel-title">اطلاعات راننده</h3>
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(model => model.FirstName, new { @class = "control-label" })
                            @Html.DisplayFor(model => model.FirstName, new { @id = "DriverFullName" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.LastName, new { @class = "control-label" })
                            @Html.DisplayFor(model => model.FirstName, new { @id = "DriverFullName" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.NationalCode, new { @class = "control-label" })
                            @Html.DisplayFor(model => model.NationalCode, new { @id = "DriverFullName" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 ">
            <div class="panel panel-primary ">
                <div class="panel-heading">
                    <h3 class="panel-title">اطلاعات بیشتر</h3>
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(model => model.BirthDate, new { @class = "control-label" })
                            @Model.BirthDate.ToShamsi('a')
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Father, new { @class = "control-label" })
                            @Html.DisplayFor(model => model.Father)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.CellNumber, new { @class = "control-label" })
                            @Html.DisplayFor(model => model.CellNumber)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
</div> 