@model Attendance.Models.Entities.LoginHistoryTool

@{
    ViewBag.Title = "افزودن " + Server.HtmlDecode(Html.DisplayNameFor(model => model).ToString());
    //Layout = "~/Views/Shared/BackEndLayout/_BackEndLayout.cshtml";
    Layout = null;
}
@Html.Label("ابزار" , new { @class = "control-label" })
 
<div class="form-group p-5 border">
    <div class="form-group" hidden>
        @Html.LabelFor(model => model.CardLoginHistoryId, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("CardLoginHistoryId")
            @Html.ValidationMessageFor(model => model.CardLoginHistoryId)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ToolId, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("ToolId", String.Empty)
            @Html.ValidationMessageFor(model => model.ToolId)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.UnitId, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("UnitId", String.Empty)
            @Html.ValidationMessageFor(model => model.UnitId)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Amount, new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            @Html.EditorFor(model => model.Amount)

            @Html.ValidationMessageFor(model => model.Amount)
        </div>
    </div>
</div>
