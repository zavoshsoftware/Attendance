@*@model ViewModels.ChangePasswordViewModel*@
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/FrontEnd/_FronEndLayout.cshtml";
}

<div class="breadcrumb_section bg_gray page-title-mini">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="page-title">
                    <h1>@ShafaArad.Resources.Label.Dashboard</h1>
                </div>
            </div>
            <div class="col-md-6">
                <ol class="breadcrumb justify-content-md-end">
                    <li class="breadcrumb-item"><a href="/">@ShafaArad.Resources.Label.Home</a></li>
                    <li class="breadcrumb-item active">@ShafaArad.Resources.Label.Change_Password</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="main_content  bg-gray-list">
    <div class="section">
        <div class="container">
            <div class="row">

                <div class="col-lg-3 col-md-4">
                    @Html.Partial("_CustomerDashboardMenuPartial")
                </div>
                <div class="tab-content dashboard_content col-lg-9">
                    <div class="tab-pane fade active show" id="dashboard" role="tabpanel" aria-labelledby="dashboard-tab">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="text-center">@ShafaArad.Resources.Label.Change_Password</h3>
                            </div>
                            <div class="card-body">
                                <div class="row profile-info-row">
                                    <div class="col-md-12 mx-auto">
                                        <div class="panel-collapse collapse login_form show" id="loginform">
                                            <div class="panel-body">
                                                @using (Html.BeginForm("ChangePassword", "Accounts", FormMethod.Post, new { }))
                                                {
                                                    @Html.AntiForgeryToken()

                                                    if (TempData["WrongPassword"] != null)
                                                    {
                                                        <p class="alert alert-danger" id="wrongEmail">@TempData["WrongPassword"].ToString()</p>
                                                    }
                                                    if (TempData["PasswordNotMatch"] != null)
                                                    {
                                                        <p class="alert alert-danger" id="wrongEmail">@TempData["PasswordNotMatch"].ToString()</p>
                                                    }

                                                    <div class="form-group">
                                                        <input type="password" required="" class="form-control" id="OldPassword" name="OldPassword" placeholder="@ShafaArad.Resources.Label.Old_Password">
                                                    </div>
                                                    <div class="form-group">
                                                        <input type="password" required="" class="form-control" id="NewPassword" name="NewPassword" placeholder="@ShafaArad.Resources.Label.New_Password">
                                                    </div>
                                                    <div class="form-group">
                                                        <input type="password" required="" class="form-control" id="ConfirmNewPassword" name="ConfirmNewPassword" placeholder="@ShafaArad.Resources.Label.Repeat_Password">
                                                    </div>
                                                    <div class="form-group">
                                                        <button type="submit" class="btn btn-fill-out btn-block">@ShafaArad.Resources.Label.Change_Password</button>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
